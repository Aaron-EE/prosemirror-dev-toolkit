{
  "name": "prosemirror-dev-toolkit",
  "version": "0.0.1",
  "author": "Teemu Koivisto <teemukoivisto.xyz@gmail.com>",
  "license": "MIT",
  "homepage": "https://teemukoivisto.github.io/prosemirror-dev-toolkit/",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.es.d.ts",
  "type": "module",
  "files": [
    "src",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TeemuKoivisto/prosemirror-dev-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/TeemuKoivisto/prosemirror-dev-toolkit/issues"
  },
  "keywords": [
    "prosemirror",
    "svelte",
    "dev",
    "devtools",
    "typescript",
    "inspector"
  ],
  "scripts": {
    "build": "rimraf build && rollup -c",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|svelte|md|graphql|mdx)\"",
    "lint": "eslint --cache --ext .js,.ts,.tsx,.svelte ./src",
    "lint:fix": "eslint --fix --ext .js,.ts,.tsx,.svelte ./src",
    "preversion": "yarn test",
    "version": "yarn build",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "cp ../README.md . && cp ../LICENSE .",
    "postpublish": "rm README.md LICENSE",
    "svelte-check": "svelte-check",
    "test": "jest src",
    "watch": "rimraf dist && rollup -cw"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.5",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/svelte": "^3.0.3",
    "@types/jest": "^27.0.1",
    "@types/prosemirror-model": "^1.13.2",
    "@types/prosemirror-state": "^1.2.7",
    "@types/prosemirror-view": "^1.19.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "jest": "^27.2.0",
    "jest-scss-transform": "^1.0.1",
    "node-sass": "^6.0.1",
    "postcss": "^8.3.6",
    "prettier": "^2.4.0",
    "prettier-plugin-svelte": "^2.4.0",
    "prosemirror-state": "^1.3.4",
    "prosemirror-view": "^1.20.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-polyfill-node": "^0.7.0",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^1.4.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "svelte": "^3.42.6",
    "svelte-check": "^2.2.6",
    "svelte-jester": "^1.8.1",
    "svelte-preprocess": "^4.9.4",
    "ts-jest": "^27.0.5",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "html": "^1.0.0",
    "jsondiffpatch": "^0.4.1",
    "prosemirror-model": "^1.14.3",
    "svelte-tree-view": "^1.1.0"
  },
  "resolutions": {
    "@types/prosemirror-model": ">=1.13.0"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.scss$": "jest-scss-transform",
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,svelte}"
    ]
  }
}
