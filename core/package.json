{
  "name": "prosemirror-dev-toolkit",
  "version": "1.0.0",
  "description": "Injectable dev tools for ProseMirror editors",
  "author": "Teemu Koivisto <teemukoivisto.xyz@gmail.com>",
  "license": "MIT",
  "homepage": "https://teemukoivisto.github.io/prosemirror-dev-toolkit/",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "src",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TeemuKoivisto/prosemirror-dev-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/TeemuKoivisto/prosemirror-dev-toolkit/issues"
  },
  "keywords": [
    "prosemirror",
    "svelte",
    "dev",
    "devtools",
    "typescript",
    "inspector"
  ],
  "scripts": {
    "build": "rimraf dist && rollup -c && rm dist/index.d.cts",
    "bundle": "UMD_BUNDLE=true rollup -c && rm dist/bundle.umd.min.d.ts",
    "watch": "rimraf dist && rollup -cw",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|svelte|md|graphql|mdx)\"",
    "lint": "eslint --cache --ext .js,.ts,.tsx,.svelte ./src",
    "lint:fix": "eslint --fix --ext .js,.ts,.tsx,.svelte ./src",
    "preversion": "svelte-check && yarn test",
    "version": "yarn build && yarn bundle",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "cp ../README.md . && cp ../LICENSE .",
    "postpublish": "rm README.md LICENSE",
    "svelte-check": "svelte-check",
    "test": "yarn test:unit && yarn test:e2e",
    "test:unit": "jest src",
    "test:e2e": "cypress run --browser chrome",
    "cy": "cypress"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.18.6",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/svelte": "^3.1.3",
    "@types/jest": "^28.1.4",
    "cypress": "^9.7.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-plugin-snapshots": "^1.4.4",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "jest": "^27.1.5",
    "jest-scss-transform": "^1.0.3",
    "jsondiffpatch": "^0.4.1",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "prosemirror-state": "^1.4.1",
    "prosemirror-view": "^1.26.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.7",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.0.2",
    "sass": "^1.53.0",
    "svelte": "^3.48.0",
    "svelte-check": "^2.8.0",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^4.10.7",
    "ts-jest": "^27.1.4",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "html": "^1.0.0",
    "prosemirror-model": "^1.18.1",
    "svelte-tree-view": "^1.3.0"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "\\$components/(.*)$": "<rootDir>/src/components/$1",
      "\\$context(.*)": "<rootDir>/src/context.ts",
      "\\$stores/(.*)$": "<rootDir>/src/stores/$1",
      "\\$tabs/(.*)$": "<rootDir>/src/tabs/$1",
      "\\$typings/(.*)$": "<rootDir>/src/typings/$1"
    },
    "transform": {
      "^.+\\.scss$": "jest-scss-transform",
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,svelte}"
    ]
  }
}
